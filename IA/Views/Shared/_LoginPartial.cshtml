@using Microsoft.AspNetCore.Identity
@using Types.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark" >Hello @User.Identity.Name!</span>
        </li>
        <li class="nav-item">
            <a id="account-signout" class="nav-link text-dark" >Sign Out</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a id="account-register" class="nav-link text-dark">Register</a>
        </li>
        <li class="nav-item">
            <a id="account-signin" class="nav-link text-dark">Sign In</a>
        </li>
    }
</ul>