@using IA.ViewModels
@model IA.ViewModels.PortfolioVM


<div class="portfolio-container">
    <input id="PortfolioId" type="text" class="d-none" value="@Model.PortfolioId" />

    <div>
        <h2>@Model.Title</h2>
    </div>
    <div class="portfolio-controls">
        <button id="new-position" class="btn btn-primary">New position</button>
        <button id="historic-transactions" class="btn btn-primary">Historic transactions</button>
    </div>

    <div>
        <h4>Open Positions</h4>
    </div>
    <partial name="~/Views/Transaction/AllTransactions.cshtml" model="@new AllTransactionsVM() { Transactions = Model.Transactions, DisplayCloseData = false}" />
    
    <div class="historic-portfolio-transactions d-none">
        <div>
            <h4>Historic Transactions</h4>
        </div>

        <partial name="~/Views/Transaction/AllTransactions.cshtml" model="@new AllTransactionsVM() { Transactions = Model.HistoricTransactions, DisplayCloseData = true}" />
    </div>
</div>
