@model IA.ViewModels.AllPortfoliosVM

    <div class="portfolio-container">
        <div class="portfolio-controls row">
            <div class="col-6">
                <button id="new-position" class="btn btn-primary">New position</button>
                <button id="historic-transactions" class="btn btn-primary">Historic transactions</button>
                <button id="edit-portfolio" class="btn btn-primary">Edit portfolio</button>
            </div>
            <div class="dropdown col-6">
                <button id="create-portfolio" class="btn btn-primary float-right">Create portfolio</button>
                <button class="btn btn-secondary dropdown-toggle float-right" type="button" id="other-portfolios" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Other portfolios
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    @foreach (var portfolio in Model.AllPortfolios)
                    {
                        <a class="dropdown-item select-portfolio" data-portfolio-id="@portfolio.PortfolioId">@portfolio.Title</a>
                    }
                </div>
            </div>
        </div>
        
        <div id="portfolio-data-container">
            <partial name="~/Views/Portfolio/PortfolioData.cshtml" model="@Model.SelectedPortfolio" />
        </div>
    </div>